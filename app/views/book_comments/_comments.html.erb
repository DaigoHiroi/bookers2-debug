<table class='table book_comments'>
  <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to(comment.user) do %>
          <%= image_tag comment.user.get_profile_image, size:"100x100" %>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= comment.comment%>
      </td>
      <% if comment.user == current_user %>
        <td>
          <%= link_to "Destroy", book_book_comments_path(comment), method: :delete, class:"btn btn-danger", remote: true %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>