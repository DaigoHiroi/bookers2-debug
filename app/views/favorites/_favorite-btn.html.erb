<% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book), remote: true, method: :delete, id: "book_#{book.id}" do %>
      ♥<%= book.favorites.count %>
    <% end %>
<% else %>
    <%= link_to book_favorites_path(book), remote: true, method: :post, id: "book_#{book.id}" do %>
      ♡<%= book.favorites.count %>
    <% end %>
<% end %>